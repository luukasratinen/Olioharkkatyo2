<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ListView Lutemoneille -->
    <ListView
        android:id="@+id/listViewBattleLutemons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="multipleChoice" />

    <!-- Taistelun aloittava nappi -->
    <Button
        android:id="@+id/btnStartBattle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taisteluun"
        android:onClick="startBattle" />

    <!-- Taistelulokin näyttävä TextView -->
    <TextView
        android:id="@+id/tvBattleLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Taisteluloki tulee tähän."
        android:textSize="16sp"
        android:padding="8dp" />
</LinearLayout>

