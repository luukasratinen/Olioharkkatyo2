<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Areenan Lutemonit:"
            android:textSize="17sp"
            android:paddingBottom="4dp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold" />


        <ListView
            android:id="@+id/listViewBattleLutemons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:choiceMode="multipleChoice"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:padding="0dp"
            android:scrollbars="vertical" />
    </LinearLayout>

    <Button
        android:id="@+id/btnStartBattle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="Aloita Taistelu"
        android:onClick="startBattle"
        android:padding="12dp"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:padding="4dp">

        <TextView
            android:id="@+id/tvBattleLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taisteluloki tulee tähän."
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:padding="8dp"
            android:scrollbars="vertical" />
    </ScrollView>
</LinearLayout>
